@model work_01.Models.ViewModels.PlayersViewModel
@{
    ViewBag.Title = "Edit";
}

<h2 class="display-4">Edit Player</h2>
<div class="row mt-3">
    <div class="col">
        @using (Html.BeginForm("Edit", "Players", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x=>x.PlayerId)
            @Html.HiddenFor(x=>x.PicturePath)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row mb-1">
                @Html.LabelFor(x => x.PlayerName, htmlAttributes: new { @class = "col-form-label col-2", style = "font-weight:bold" })
                <div class="col-10">
                    @Html.TextBoxFor(x => x.PlayerName, new { @class = "form-control form-control-sm r" })
                    @Html.ValidationMessageFor(x => x.PlayerName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-1">
                @Html.LabelFor(x => x.Grade, htmlAttributes: new { @class = "col-form-label col-2", style = "font-weight:bold" })
                <div class="col-10">
                    @Html.EnumDropDownListFor(x => x.Grade, "----Select----", htmlAttributes: new { @class = "form-control form-control-sm r" })
                    @Html.ValidationMessageFor(x => x.Grade, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-1">
                @Html.LabelFor(x => x.SportsId, htmlAttributes: new { @class = "col-form-label col-2", style = "font-weight:bold" })
                <div class="col-10">
                    @Html.DropDownListFor(x => x.SportsId, ViewBag.sports as SelectList, "----Select----", htmlAttributes: new { @class = "form-control form-control-sm r" })
                    @Html.ValidationMessageFor(x => x.SportsId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-1">
                @Html.LabelFor(x => x.JoinDate, htmlAttributes: new { @class = "col-form-label col-2", style = "font-weight:bold" })
                <div class="col-10">
                    @Html.TextBoxFor(x => x.JoinDate, new { @class = "form-control form-control-sm r" })
                    @Html.ValidationMessageFor(x => x.JoinDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-1">
                @Html.LabelFor(x => x.Picture, htmlAttributes: new { @class = "col-form-label col-2", style = "font-weight:bold" })
                <div class="col-10">
                    @Html.TextBoxFor(x => x.Picture, new { @class = "form-control form-control-sm r", type = "file" })
                    <img src="@Url.Content(Model.PicturePath)" width="50" height="50" class="rounded-2 mt-1" />
                    @Html.ValidationMessageFor(x => x.Picture, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-10 offset-2">
                    <input type="reset" class="btn btn-secondary" value="Reset Value" />
                    <input type="submit" class="btn btn-success" value="Update Data" />
                </div>
            </div>
        }
        <div>
            <a href="@Url.Action("Index","Players")" class="btn btn-link"><i class="fa fa-arrow-left"></i> Back to list</a>
        </div>
    </div>
</div>
@section styles{
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker3.standalone.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $(document).ready(() => {
            $("#JoinDate").datepicker({format:"yyyy-mm-dd"})
        })
    </script>
}

